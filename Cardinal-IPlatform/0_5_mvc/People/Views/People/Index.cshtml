@model IEnumerable<People.Models.PersonFormModel>
@{ 
    int i = 0;
}

<h3>My people</h3>

@if (Model.Count() == 0)
{
    <h4>You have not added any people to your list. <a href="/People/Create">Start adding people</a></h4>
}
else
{

    <ul>
        
        @foreach (var person in Model)
        {
            if (i == 0)
            {
                <li>
                    <h2>@person.FirstName @person.Surname</h2>
                    lives in @person.AddressProvince and has ID number @person.IDNumber
                </li>
                if (person.Equals(Model.Last()))
                {
                    <li>
                        <a href="/People/Create">Add some more people</a>
                    </li>
                }
                i++;
            }
            else
            {
                <li>
                    <h2>@person.FirstName @person.Surname</h2>
                    lives in @person.AddressProvince and has ID number @person.IDNumber
                </li>
                if (person.Equals(Model.Last()))
                {
                    <li>
                        <a href="/People/Create">Add some more people</a>
                    </li>
                }
                i = 0;
            }

        }
    </ul>

   
}