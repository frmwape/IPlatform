@model People.Models.PersonFormModel

<h2>Add a new person</h2>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>

        ID Number @Html.EditorFor(model => model.SearchIdNumber)
                  @Html.ValidationMessageFor(model => model.SearchIdNumber, "")
